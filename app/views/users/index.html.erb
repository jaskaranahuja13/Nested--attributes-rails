<%=link_to 'New User', new_user_path %>
<% if @users.empty? %>
  <h1>No Posts available</h1>
<%else %>
<table>
  <thead>
  <tr>
    <th>Full Name</th>
    <th>Job</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <%@users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%=user.job %></td>
    <td><%= link_to 'Show',user_path(user) %></td>
    <td><%=link_to 'Edit',edit_user_path(user) %></td>
    <td><%=button_to 'Delete',user_path(user) , method: :delete %></td>
  </tr>
    <% end %>
  </tbody>
</table>
<%end %>
