
<h3>User Details :</h3>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Date:</strong>
  <%= @user.dob %>
</p>
<p>
  <strong>Job:</strong>
  <%= @user.job %>
</p>
<p>
<%if @user.posts.present? %>
  <% @user.posts.each do |post| %>
    <h3>Posts :</h3>
    <p>
      <strong>Title:</strong>
      <%= post.title %>
    </p>
    <p>
      <strong>Body:</strong>
      <%= post.body %>
    </p>


  <%end %>


  <%end %>
<%= link_to 'New Post', new_user_post_path(@user) %>

  <%= link_to 'All Posts', user_posts_path(@user)%>
