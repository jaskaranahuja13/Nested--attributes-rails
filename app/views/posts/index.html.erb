<%=link_to 'User', new_user_path %>
<% if @posts.empty? %>
  <h1>No Posts available</h1>
  <%else %>
  <table>
    <thead>
    <tr>
      <th>Full Name</th>
      <th>Post</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%@posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%=post.title %></td>
        <td><%= link_to 'Show',user_post_path(post.user,post) %></td>
        <%if post.user == @user %>
        <td><%=link_to 'Edit',edit_user_post_path(post.user,post) %></td>
          <td><%=button_to 'Delete',user_post_path(post.user,post) , method: :delete %></td>

      <%else %>
        <td></td>
          <td></td>

          <%end %>

      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Back to Users ',users_path  %>